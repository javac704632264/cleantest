<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_dimens_30dp"
        android:background="@drawable/shape_white_corner_16dp"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_dimens_52dp"
        android:layout_marginBottom="@dimen/common_dimens_93dp"
        android:background="@drawable/layer_subscription_gradient"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_dimens_22dp"
        android:layout_marginLeft="@dimen/common_dimens_15dp"
        android:layout_marginStart="@dimen/common_dimens_15dp"
        android:layout_marginEnd="@dimen/common_dimens_15dp"
        android:layout_marginRight="@dimen/common_dimens_15dp"
        android:layout_marginBottom="@dimen/common_dimens_95dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pay_result_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dimens_50dp"
            android:layout_marginStart="@dimen/common_dimens_5dp"
            android:layout_marginLeft="@dimen/common_dimens_5dp"
            android:layout_marginRight="@dimen/common_dimens_5dp"
            android:layout_marginEnd="@dimen/common_dimens_5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_ff3963"
            android:textStyle="bold"
            android:textSize="@dimen/common_text_size_20sp"
            tools:text="@string/string_successfully"/>

        <TextView
            android:id="@+id/tv_pay_result_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dimens_9dp"
            android:layout_marginStart="@dimen/common_dimens_16dp"
            android:layout_marginLeft="@dimen/common_dimens_16dp"
            android:layout_marginEnd="@dimen/common_dimens_16dp"
            android:layout_marginRight="@dimen/common_dimens_16dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/common_text_size_13sp"
            android:textColor="#de000000"
            android:gravity="center"
            tools:text="@string/string_premium_success"/>

        <LinearLayout
            android:id="@+id/ll_success_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dimens_22dp"
            android:visibility="visible"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_remove_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_all_templates"
                android:drawablePadding="@dimen/common_dimens_5dp"
                android:text="@string/string_all_templates"
                android:textSize="@dimen/common_text_size_10sp"
                android:textColor="@color/color_ff3963"
                android:gravity="center"
                android:visibility="visible"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_image_downloads"
                android:drawablePadding="@dimen/common_dimens_5dp"
                android:text="@string/string_image_downloads"
                android:textSize="@dimen/common_text_size_10sp"
                android:textColor="@color/color_ff3963"
                android:gravity="center"
                android:visibility="visible"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_create_avatars"
                android:drawablePadding="@dimen/common_dimens_5dp"
                android:text="@string/string_create_avatars"
                android:textSize="@dimen/common_text_size_10sp"
                android:textColor="@color/color_ff3963"
                android:gravity="center"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_generate_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/icon_dot"
                android:drawableStart="@drawable/icon_dot"
                android:drawablePadding="@dimen/common_dimens_5dp"
                android:text="@string/string_generate_infinite"
                android:textSize="@dimen/common_text_size_10sp"
                android:gravity="center"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fail_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dimens_17dp"
            android:layout_marginBottom="@dimen/common_dimens_20dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/pay_fail_close"
                android:drawableLeft="@drawable/pay_fail_close"
                android:drawablePadding="@dimen/common_dimens_17dp"
                android:gravity="center"
                android:text="@string/string_all_templates"
                android:textColor="#696969"
                android:textSize="@dimen/common_text_size_12sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pay_fail_close"
                android:drawableStart="@drawable/pay_fail_close"
                android:layout_marginTop="@dimen/common_dimens_16dp"
                android:drawablePadding="@dimen/common_dimens_17dp"
                android:text="@string/string_image_downloads"
                android:textSize="@dimen/common_text_size_12sp"
                android:textColor="#696969"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_dimens_16dp"
                android:drawableLeft="@drawable/pay_fail_close"
                android:drawableStart="@drawable/pay_fail_close"
                android:drawablePadding="@dimen/common_dimens_17dp"
                android:text="@string/string_create_avatars"
                android:textSize="@dimen/common_text_size_12sp"
                android:textColor="#696969"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_pay_success_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pay_success_star"/>

    <ImageView
        android:id="@+id/img_pay_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pay_success"/>

    <LinearLayout
        android:id="@+id/ll_pay_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_dimens_28dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_give_up"
            android:layout_width="@dimen/common_dimens_123dp"
            android:layout_height="@dimen/common_dimens_42dp"
            android:layout_marginStart="@dimen/common_dimens_20dp"
            android:layout_marginLeft="@dimen/common_dimens_20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_cancel_bg"
            android:text="@string/string_give_up"
            android:textColor="@color/color_ff3963"
            android:textSize="@dimen/common_text_size_14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_continue"
            android:layout_width="@dimen/common_dimens_123dp"
            android:layout_height="@dimen/common_dimens_42dp"
            android:layout_marginStart="@dimen/common_dimens_20dp"
            android:layout_marginLeft="@dimen/common_dimens_20dp"
            android:layout_marginRight="@dimen/common_dimens_20dp"
            android:layout_marginEnd="@dimen/common_dimens_20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_great_bg"
            android:text="@string/string_continue"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimens_42dp"
            android:layout_marginStart="@dimen/common_dimens_20dp"
            android:layout_marginLeft="@dimen/common_dimens_20dp"
            android:layout_marginRight="@dimen/common_dimens_20dp"
            android:layout_marginEnd="@dimen/common_dimens_20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_great_bg"
            android:text="@string/string_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_14sp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>


</FrameLayout>
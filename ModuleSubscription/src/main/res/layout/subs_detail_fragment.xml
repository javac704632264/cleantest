<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_color_black2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sub_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/common_dimens_20dp"
        android:paddingStart="@dimen/common_dimens_20dp"
        android:paddingEnd="@dimen/common_dimens_20dp"
        android:src="@drawable/sub_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/sub_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/common_dimens_20dp"
                android:paddingEnd="@dimen/common_dimens_20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sub_premium_iv"
                    android:layout_width="@dimen/common_dimens_24dp"
                    android:layout_height="@dimen/common_dimens_21dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sub_premium_logo" />

                <TextView
                    android:id="@+id/sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_dimens_10dp"
                    android:text="@string/sub_title_new"
                    android:textColor="@color/color_f2c38b"
                    android:textDirection="locale"
                    android:textSize="@dimen/common_text_size_24sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <TextView
                android:id="@+id/sub_detail_desc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/common_dimens_20dp"
                android:paddingEnd="@dimen/common_dimens_20dp"
                android:layout_marginTop="@dimen/common_dimens_12dp"
                android:text="@string/sub_detail_desc_1"
                android:textColor="#8B8DA1"
                android:textSize="@dimen/common_text_size_14sp" />

            <TextView
                android:id="@+id/sub_detail_desc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/common_dimens_20dp"
                android:paddingEnd="@dimen/common_dimens_20dp"
                android:layout_marginTop="@dimen/common_dimens_8dp"
                android:text="@string/sub_detail_desc_2"
                android:textColor="#8B8DA1"
                android:textSize="@dimen/common_text_size_14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:paddingStart="@dimen/common_dimens_20dp"
                android:paddingEnd="@dimen/common_dimens_20dp"
                android:layout_marginTop="@dimen/common_dimens_28dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimens_150dp"/>

            <com.ai.subscription.ui.DotsView
                android:id="@+id/dots_view"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/common_dimens_20dp"
                android:paddingEnd="@dimen/common_dimens_20dp"
                android:layout_marginTop="@dimen/common_dimens_28dp"
                android:orientation="horizontal">

                <include
                    android:id="@+id/sub_price_1"
                    layout="@layout/sub_product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <include
                    android:id="@+id/sub_price_2"
                    layout="@layout/sub_product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_dimens_12dp"
                    android:layout_weight="1" />

                <include
                    android:id="@+id/sub_price_3"
                    layout="@layout/sub_product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_dimens_12dp"
                    android:layout_weight="1" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <FrameLayout
                android:id="@+id/sub_buy_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimens_65dp"
                android:layout_marginTop="@dimen/common_dimens_16dp"
                android:clickable="true"
                android:focusable="true">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/sub_buy_anim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="sub_loading/data.json"
                    app:lottie_imageAssetsFolder="sub_loading/images"
                    app:lottie_loop="true" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimens_40dp"
                    android:clickable="false"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sub_buy_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/common_dimens_20dp"
                        android:text="@string/sub_trail_buy"
                        android:textColor="@color/color_60361d"
                        android:textSize="@dimen/common_text_size_13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sub_buy_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/common_dimens_1dp"
                        android:paddingHorizontal="@dimen/common_dimens_20dp"
                        android:paddingBottom="@dimen/common_dimens_2dp"
                        android:textColor="@color/color_60361d"
                        android:textSize="@dimen/common_text_size_9sp"
                        tools:text="$4.99/YEAR" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </FrameLayout>

            <TextView
                android:id="@+id/sub_restore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sub_buy_layout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_dimens_16dp"
                android:gravity="center"
                android:text="@string/sub_restore"
                android:textColor="#ff5a5b5f"
                android:textSize="@dimen/common_text_size_10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sub_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub_restore"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_dimens_42dp"
                android:layout_marginBottom="@dimen/common_dimens_20dp"
                android:text="@string/sub_trial_description_new"
                android:textAlignment="center"
                android:textColor="@color/sub_user_agrrement"
                android:textSize="@dimen/common_text_size_9sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</LinearLayout>
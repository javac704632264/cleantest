<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_top_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_dimens_110dp"
        android:src="@drawable/vip_detail_tip_bg_1" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimens_8dp"
        android:text="@string/sub_detail_desc_1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/common_text_size_15sp" />

</LinearLayout>